<div id="profile">
<div id="profile_image">
    <img src="<%= @user.image %>"/>
    <i class="fa fa-facebook-official" aria-hidden="true"></i>
    <i class="fa fa-instagram" aria-hidden="true"></i>
    <i class="fa fa-twitter" aria-hidden="true"></i>
</div>

<div id="profile_page">
    <% if session[:user_id] %>
        <% if @user.id == session[:user_id] %>
            <form method="post" action="/updateImage">
	           <input type="file" name="image" accept=".jpg, .jpeg, .png">
	           <input type="submit" value="Update"/>
            </form>
        <% end %>
    <% end %>

    <div id="profile_info">
        <div id="profile_username" class="usersInfo">
            <h2>Username:</h2><p><%= @user.username %></p>           
        </div>

    <% if session[:user_id] %>
        <% if @user.id == session[:user_id] %>
            <form method="post" action="/updateUsername">
	           <input type="text" name="username" placeholder="Username">
	           <input type="submit" value="Update"/>
            </form>
        <% end %>
    <% end %>

        <div id="profile_fullname" class="usersInfo">
            <h2>Name:</h2><p><%= @user.fullname %></p>
        </div>

    <% if session[:user_id] %>
        <% if @user.id == session[:user_id] %>
            <form method="post" action="/updateFullname">
	           <input type="text" name="fullname" placeholder="Full name">
	           <input type="submit" value="Update"/>
            </form>
        <% end %>
    <% end %>

        <div id="profile_email" class="usersInfo">
            <h2>Email:</h2><p><%= @user.email %></p>
        </div>
    </div>

    <% if session[:user_id] %>
        <% if @user.id == session[:user_id] %>
            <form method="post" action="/updateEmail">
	           <input type="text" name="email" placeholder="Email">
	           <input type="submit" value="Update"/>
            </form>    
        <% end %>
    <% end %>

</div> <!-- end of profile_page -->
<div id="blogs">
    <div id="profile_blogs" class="usersInfo">
        <h2>My Blog Posts:</h2>
        <ul>
            <% @user.blog_posts.each do |blog_post| %>
                <li><a href="/blogpost/<%= blog_post.id %>"><%= blog_post.title %></a></li>
            <% end %>    
        </ul>
    </div>

    <% if session[:user_id] %>
        <% if @user.id == session[:user_id] %>
            <% p @user.id %>
            <% p session[:user_id] %>
            <form method="post" action="/deleteaccount">
                <input type="hidden" name="delete" value="DELETE">
                <input type="submit" value="delete">
            </form>
        <% end %>
    <% end %>

    <% if session[:user_id] %>
        <% if @user.id == session[:user_id] %>
            <form method="post" action="/updatePassword">
	           <input type="password" name="password" placeholder="Password">
	           <input type="submit" value="Update"/>
            </form>
        <% end %>
    <% end %>
</div>
</div>